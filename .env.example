# Postgres connection string for Prisma & your app
# IMPORTANT: Replace with your actual database URL - never commit real credentials!
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# JWT secret for authentication
# Generate a secure secret: openssl rand -hex 64
# IMPORTANT: Never commit your real JWT secret!
JWT_SECRET=your-secure-random-secret-here

# Allowed front-end origins (comma separated)
CLIENT_ORIGIN=http://localhost:5000,https://test.realitygamesfantasyleague.com,https://www.realitygamesfantasyleague.com

# Client URL for email links and redirects
CLIENT_URL=https://test.realitygamesfantasyleague.com

# Session secret for express-session
SESSION_SECRET=your-session-secret-here

# Optional: override server port locally
PORT=5050

# Keep setup endpoint disabled in environments you care about
ENABLE_SETUP_ENDPOINT=false

# Email Configuration (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM="RGFL <noreply@realitygamesfantasyleague.com>"

# SimpleTexting SMS Configuration
SIMPLETEXTING_API_TOKEN=your_simpletexting_api_token_here
SIMPLETEXTING_ACCOUNT_PHONE=9182133311
SIMPLETEXTING_BASE_URL=https://api-app2.simpletexting.com/v2
SIMPLETEXTING_WEBHOOK_SECRET=generate_with_openssl_rand_hex_32

# SMS Features
SMS_REMINDER_ENABLED=true
SMS_REMINDER_CRON=0 19 * * 3
SMS_RATE_LIMIT_PER_USER_PER_DAY=10

# Auth0 Configuration
# Get these from your Auth0 dashboard: https://manage.auth0.com/
# IMPORTANT: Add all domains to Auth0 Allowed Callback URLs, Logout URLs, and Web Origins
VITE_AUTH0_DOMAIN=your-tenant.us.auth0.com
VITE_AUTH0_CLIENT_ID=your_auth0_client_id_here
# Leave CALLBACK_URL empty to auto-detect from window.location.origin
# Or set explicitly for development: http://localhost:5000/callback
VITE_AUTH0_CALLBACK_URL=

# Registration Gate
# Set the date when registration opens (ISO 8601 format)
# Leave empty to allow registration immediately
REGISTRATION_OPEN_DATE=2025-01-05T00:00:00Z
